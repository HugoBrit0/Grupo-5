@model WebApplication1.Models.AdminUser

@{
    ViewData["Title"] = "Perfil do Administrador";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <dl class="row">
        <dt class="col-sm-2">Nome de Usuário</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Data de Criação</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToShortDateString()</dd>
    </dl>

    <!-- Botão para editar o perfil -->
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Editar Perfil</a>
</div>
