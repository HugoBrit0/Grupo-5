@{
    ViewData["Title"] = "Localização";
}

<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - CarGarage</title>
    <style>
        body {
            background-color: #ffffff; /* Fundo branco */
            font-family: 'Arial', sans-serif;
        }

        .header1 {
            background: url('~/images/location-header.jpg') no-repeat center center / cover;
            color: rgba(0, 0, 0, 0.5);
            padding: 10px 0;
            text-align: center;
            position: relative;
        }

            .header1 h1, .header1 h2 {
                position: relative;
                z-index: 2;
            }

        .info-section {
            padding: 30px;
            margin-top: -50px;
            background-color: rgba(255, 255, 255, 0.9); /* Leve transparência para se misturar */
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            opacity: 0; /* Começa invisível */
            transition: opacity 0.5s; /* Efeito de transição */
        }

        .map-container {
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            opacity: 0; /* Começa invisível */
            transition: opacity 0.5s; /* Efeito de transição */
        }

        .contact-form {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
            opacity: 0; /* Começa invisível */
            transition: opacity 0.5s; /* Efeito de transição */
        }

        .icon {
            font-size: 1.5rem;
            color: #007bff;
            margin-right: 10px;
        }

        .section-title {
            margin-top: 40px;
            margin-bottom: 20px;
            font-size: 1.8rem;
            font-weight: bold;
            text-align: center;
            color: #333;
        }
    </style>
</head>
<body>
    <header class="header1">
        <h1>Onde Estamos</h1>
        <h2>Visite-nos para conhecer a nossa vasta gama de carros e motos.</h2>
    </header>
    <hr />

    <div class="container my-5">
        <div class="info-section">
            <h2 class="section-title">Endereço</h2>
            <p>
                <i class="icon bi bi-geo-alt-fill"></i>
                Rua Exemplo, 123, Lisboa, Portugal
            </p>
            <h2 class="section-title">Horário de Funcionamento</h2>
            <p>
                <i class="icon bi bi-clock-fill"></i>
                Segunda a Sexta: 9h - 18h <br />
                Sábado: 10h - 16h <br />
                Domingo: Fechado
            </p>
        </div>

        <div class="row my-5">
            <div class="col-md-12 map-container">
                <h2 class="section-title">Localização no Mapa</h2>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.835434509263!2d144.9537353155041!3d-37.81720997975174!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f0bcb39%3A0x5039c233ce200c8f!2sYour+Location+Here!5e0!3m2!1sen!2s!4v1234567890123" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 contact-form">
                <h2 class="section-title">Fale Conosco</h2>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="name" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required />
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Mensagem</label>
                        <textarea class="form-control" id="message" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.info-section, .map-container, .contact-form').css('opacity', 1); // Faz os elementos aparecerem
        });
    </script>
</body>
</html>
