@model List<WebApplication1.Models.AdViewModel>

@{
    ViewData["Title"] = "Anúncios Disponíveis";
}

<h2>Anúncios Disponíveis</h2>

<div class="container mt-4">
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <p>Nenhum anúncio disponível.</p>
        }
        else
        {
            foreach (var ad in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(ad.ImagePath))
                        {
                            <img src="@ad.ImagePath" class="card-img-top" alt="Imagem do Anúncio" style="max-height: 200px; object-fit: cover;" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">Marca: @ad.Marca</h5>
                            <p class="card-text">Quilometragem: @ad.Quilometragem km</p>
                            <p class="card-text">Ano: @ad.Ano</p>
                            <p class="card-text">Estado: @ad.Estado</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
