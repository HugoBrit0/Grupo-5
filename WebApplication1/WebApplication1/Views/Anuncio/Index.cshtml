@model IEnumerable<WebApplication1.Models.Anuncio>

@{
    ViewData["Title"] = "Lista de Anúncios";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary me-2">Criar Novo Anúncio</a>
    <a href="@Url.Action("Index", "Anuncio", new { nocache = DateTime.Now.Ticks })" class="btn btn-secondary me-2">Atualizar Lista</a>
    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="searchString" class="form-control me-2" placeholder="Pesquisar anúncios..." />
        <input type="submit" value="Pesquisar" class="btn btn-primary" />
    </form>
</div>


@if (Model.Any())
{
        

   
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Titulo">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="card-text">@item.Descricao</p>
                        <p class="card-text"><small class="text-muted">Estado: @item.EstadoCarro</small></p>
                        <p class="card-text"><small class="text-muted">Quilometragem: @item.Quilometragem km</small></p>
                        <p class="card-text"><small class="text-muted">Telefone: @item.Telefone</small></p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Nenhum anúncio encontrado.</p>
}
