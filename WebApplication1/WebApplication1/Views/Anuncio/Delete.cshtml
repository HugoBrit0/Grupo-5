@model WebApplication1.Models.Anuncio

@{
    ViewData["Title"] = "Eliminar Anúncio";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja eliminar este anúncio?</h3>
<div>
    <h4>Anúncio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCarro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoCarro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quilometragem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quilometragem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>
