@model WebApplication1.Models.User
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuário</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Registro de Usuário</h2>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="form-group">
                <label for="Username">Nome de Usuário</label>
                <input id="Username" name="Username" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Username)</span>
            </div>

            <div class="form-group">
                <label for="Email">E-mail</label>
                <input id="Email" name="Email" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>

            <div class="form-group">
                <label for="PasswordHash">Senha</label>
                <input id="PasswordHash" name="PasswordHash" class="form-control" type="password" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.PasswordHash)</span>
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
</body>
</html>
